---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
}

const { title, description, pubDate, url } = Astro.props;

const fullDate = pubDate.toLocaleDateString("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

---

<li
  class="relative dark:text-zinc-400 text-zinc-600 flex flex-col gap-2 sm:gap-3 sm:p-5 dark:sm:hover:bg-zinc-800 sm:hover:bg-zinc-200 transition-colors border rounded-3xl ml-3 "
>
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-0.5 -left-5 border" ></div>
<time
datetime={pubDate.toISOString()}
class="block text-sm tracking-wide dark:text-zinc-400 text-zinc-600"
>{fullDate}
</time>
<a
class="text-lg before:absolute before:inset-0 font-semibold dark:text-zinc-100 text-zinc-700"
href={url}
>
{title}
</a>
<p class="leading-relaxed max-w-prose">{description}</p>
</li>
